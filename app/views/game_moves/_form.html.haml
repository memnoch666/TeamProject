= form_for @game_move do |f|
  - if @game_move.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game_move.errors.count, "error")} prohibited this game_move from being saved:"
      %ul
        - @game_move.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :code
    = f.text_area :code
  .field
    = f.label :game_type
    = f.collection_select(:game_type_id,
      GameType.all,
      :id,
      :title,
      {:prompt=>true})
  .actions
    = f.submit 'Save'
