= form_for @game_type do |f|
  - if @game_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game_type.errors.count, "error")} prohibited this game_type from being saved:"
      %ul
        - @game_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :max_score
    = f.number_field :max_score
  .actions
    = f.submit 'Save'
