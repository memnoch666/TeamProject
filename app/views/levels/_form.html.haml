= form_for @level do |f|
  - if @level.errors.any?
    #error_explanation
      %h2= "#{pluralize(@level.errors.count, "error")} prohibited this level from being saved:"
      %ul
        - @level.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :level
    = f.text_area :level
  .field
    = f.label :game_type
    = f.collection_select(:game_type_id,
      GameType.all,
      :id,
      :title,
      {:prompt=>true})
  .actions
    = f.submit 'Save'
